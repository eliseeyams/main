            <plugin>
                <groupId>org.openapitools</groupId>
                <artifactId>openapi-generator-maven-plugin</artifactId>
                <version>7.8.0</version>
                <executions>

                    <!-- Java-Server: Interfaces + Modelle (keine fertigen Controller) -->
                    <execution>
                        <id>generate-java-server</id>
                        <goals><goal>generate</goal></goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <inputSpec>${openapi.spec.file}</inputSpec>
                            <generatorName>spring</generatorName>
                            <output>${openapi.server.output}</output>
                            <apiPackage>${openapi.api.package}</apiPackage>
                            <modelPackage>${openapi.model.package}</modelPackage>
                            <configOptions>
                                <useSpringBoot3>true</useSpringBoot3>
                                <interfaceOnly>true</interfaceOnly>        <!-- nur Interfaces, du implementierst -->
                                <useTags>true</useTags>                     <!-- nach Tags gruppieren -->
                                <dateLibrary>java8</dateLibrary>
                                <serializableModel>true</serializableModel>
                            </configOptions>
                        </configuration>
                    </execution>

                    <!-- TypeScript-Client (Angular) -->
                    <execution>
                        <id>generate-ts-client</id>
                        <goals><goal>generate</goal></goals>
                        <phase>verify</phase>
                        <configuration>
                            <inputSpec>${openapi.spec.file}</inputSpec>
                            <generatorName>typescript-angular</generatorName>
                            <output>${ts.client.output}</output>
                            <configOptions>
                                <ngVersion>17</ngVersion>
                                <stringEnums>true</stringEnums>
                                <modelPropertyNaming>camelCase</modelPropertyNaming>
                                <supportsES6>true</supportsES6>
                            </configOptions>
                            <globalProperties>
                                <models/>
                                <apis/>
                            </globalProperties>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>add-openapi-sources</id>
                        <phase>generate-sources</phase>
                        <goals><goal>add-source</goal></goals>
                        <configuration>
                            <sources>
                                <source>${openapi.server.output}/src/main/java</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>



