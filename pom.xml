        <openapi.api.package>org.example.controlbackendbf.api</openapi.api.package>
        <openapi.model.package>org.example.controlbackendbf.api.model</openapi.model.package>
        <springdoc.maven.plugin.version>1.8</springdoc.maven.plugin.version>
